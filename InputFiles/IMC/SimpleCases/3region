    }
    cells
    {
      cell1 { id 1; type simpleCell; surfaces (  -1); filltype mat; material mat1; }
      cell2 { id 2; type simpleCell; surfaces (1 -2); filltype mat; material mat2; }
      cell3 { id 3; type simpleCell; surfaces (   2); filltype mat; material mat3; }
    }
    universes
    {
      root { id 1; type rootUniverse; border 3; fill u<2>; }
      cell { id 2; type cellUniverse; cells ( 1 2 3); }
    }
}

